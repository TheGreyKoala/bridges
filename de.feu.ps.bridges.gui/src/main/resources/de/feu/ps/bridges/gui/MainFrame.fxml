<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.feu.ps.bridges.gui.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%menus.file">
            <items>
              <MenuItem mnemonicParsing="false" text="%menus.file.newPuzzle" />
              <MenuItem mnemonicParsing="false" text="%menus.file.restartPuzzle" />
              <MenuItem mnemonicParsing="false" text="%menus.file.loadPuzzle" />
              <MenuItem mnemonicParsing="false" text="%menus.file.savePuzzle" />
              <MenuItem mnemonicParsing="false" text="%menus.file.savePuzzleAs" />
              <MenuItem mnemonicParsing="false" text="%menus.file.exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <Pane fx:id="mainPanel" onMouseClicked="#addCircle" />
         </content></ScrollPane>
   </center>
</BorderPane>
